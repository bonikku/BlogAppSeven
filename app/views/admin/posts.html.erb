<div class="container">
  <h1 class="text-center">Administrator Menu</h1>
  <%= render 'admin/nav_links' %>
  <table class='table table table-dark table-striped'>
    <thead>
    <tr>
      <th scope="col"></th>
      <th scope="col"></th>
      <th scope="col"></th>
      <th scope="col"></th>
    </tr>
    </thead>
    <tbody>
    <% @posts.each do |post| %>
      <tr>
        <th scope="row"><%= post.id %></th>
        <td><%= link_to post.title.truncate(15), admin_post_path(post) %></td>
        <td><%= post.user.full_name %></td>
        <td><%= pluralize(post.comments.size, "Comment") %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>